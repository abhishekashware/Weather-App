<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:text="Date"/>

    <TextView
        android:id="@+id/mintv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintTop_toBottomOf="@id/date"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/white"
        android:text="Min Temp"/>
    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintRight_toLeftOf="@id/status"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/white"
        android:text="44"/>
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:textColor="@color/white"
        android:text="Heavy Cloud"/>
    <TextView
        android:id="@+id/minres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/status"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:textColor="@color/white"
        android:text="2"/>
    <TextView
        android:id="@+id/maxtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/mintv"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/mintv"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:textColor="@color/white"
        android:text="Max Temp"/>

    <TextView
        android:id="@+id/maxres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="@id/minres"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/minres"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:text="2"/>
</androidx.constraintlayout.widget.ConstraintLayout>